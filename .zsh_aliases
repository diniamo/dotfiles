alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
dfcp() {
	dotfiles commit -am $1 && dotfiles push
}
dst() { dotfiles status }

alias btw='neofetch'

# This fixes sudo usage with aliases
alias sudo='sudo '

# eval $(thefuck --alias)

alias v='nvim'
alias vi='nvim'
alias vim='nvim'

alias ls='exa --icons'
alias ll='exa --icons --git -lha'
alias lt='exa --icons -T'
alias la='exa --icons -a'

alias pls='sudo  $(fc -ln -1)'
alias please='sudo bash -c "$(fc -ln -1)"'

alias icat='wezterm imgcat'
# alias ssh='wezterm ssh'

alias dragon-drop='dragon-drop -x'

alias rm='rmtrash'
alias rmdir='rmdirtrash'
alias rmd='/usr/sbin/rm'

alias hash='sha256sum'
alias copy='xclip -in -selection clipboard'
alias paste='xclip -out -selection clipboard'

alias windows='sudo grub-reboot 1 && sudo reboot'

# Suffix aliases
alias -s git="git clone"
alias -s py="python"

alias def="trans -d"
alias say="trans -sp"
alias hun="trans :hu"

..() {
    if [ -z "$1" ]; then
        cd ..
    else
        cd `awk "BEGIN {while (c++<$1) printf \"../\"}"`
    fi
}

mcd () {
	[ -d $1 ] || mkdir $1
	cd $1 && pwd
}

upload() {
	if [ $# -eq 0 ]; then
		curl -F"file=@-" http://0x0.st
	else
		curl -F"file=@$1" http://0x0.st
	fi
}

locedit() {
	locate $@ | fzf | xargs nvim
}
